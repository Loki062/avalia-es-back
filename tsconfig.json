{
    "compilerOptions": {
      "target": "es2019",        
      "module": "commonjs",      
      "outDir": "./build",       
      "rootDir": "./src",        
      "strict": true,            
      "esModuleInterop": true,  
      "skipLibCheck": true,      
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }
  